{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": ["react-app", "prettier"],
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"plugins": ["react", "prettier"],
	"rules": {
		"no-console": 1,
		"no-debugger": 2,
		// "no-unused-vars": [1, { "vars": "all", "args": "all", "ignoreRestSiblings": false }],

		"react/self-closing-comp": [
			1,
			{
				"component": true,
				"html": true
			}
		],

		"prettier/prettier": [
			"error",
			{
				"printWidth": 120,
				"trailingComma": "es5",
				"semi": true,
				"endOfLine": "auto",
				"jsxSingleQuote": false,
				"singleQuote": true,
				"useTabs": true
			}
		]
	}
}
